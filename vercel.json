{
    "version": 1,
    "builds": [{
        "src": "index.js",
        "use": "@now/node"
    }],
    {
        "scripts": {
            "build": "tsc --project ./ && cpx 'src/assets/**' 'dist/assets",
            "start": "node dist/index.js"
        }
    }
    "routes": [{
        // Specify which paths will route to a destination using a regex
        "src": "/(.*)",
        // Specify the paths' destination
        "dest": "index.js"
    }]
}